<div class="well">
  <form class="" action="/sweater/update" method="post">
    <input type="hidden" name="id" value="{{_id}}">
    <input type="text" name="name" value="{{name}}">
    <input type="number" name="pockets" value="{{pockets}}">
    <input type="text" name="materialPrimary" value="{{materials.primary}}">
    <input type="text" name="materialSecondary" value="{{materials.secondary}}">
    <div class="checkbox">
      <label><input type="checkbox" name="color" value="red">Red</label>
    </div>
    <div class="checkbox">
      <label><input type="checkbox" name="color" value="blue">Blue</label>
    </div>
    <div class="checkbox">
      <label><input type="checkbox" value="green" name="color" >Green</label>
    </div>
    <input class="btn btn-primary" type="submit" name="" value="Update Sweater">

  </form>
</div>
